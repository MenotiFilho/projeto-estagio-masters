{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "strict": false,                      // Desativa as checagens rigorosas de tipo
    "useUnknownInCatchVariables": false,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,                 // Ignora a checagem de bibliotecas
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,                     // Permite emiss√£o dos arquivos mesmo com erros
    "jsx": "react-jsx",

    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}